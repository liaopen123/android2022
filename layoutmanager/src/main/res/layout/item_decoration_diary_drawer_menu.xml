<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/black"
        android:id="@+id/view_top_line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/iv_dot"
        android:layout_width="2dp"
        android:layout_height="0dp"/>
    <View
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/black"
        android:id="@+id/view_line"
        app:layout_constraintTop_toTopOf="@+id/iv_dot"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="2dp"
        android:layout_height="0dp"/>
    <ImageView
        app:layout_constraintLeft_toLeftOf="@+id/view_line"
        app:layout_constraintRight_toRightOf="@+id/view_line"
        android:id="@+id/iv_dot"
        app:layout_constraintTop_toTopOf="@+id/tv_progress_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_progress_title"
        android:layout_width="8dp"
        android:layout_height="8dp"/>

    <TextView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/iv_dot"
        android:id="@+id/tv_progress_title"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="准备阶段"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <TextView
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_progress_title"
        app:layout_constraintLeft_toRightOf="@+id/iv_dot"
        android:id="@+id/tv_progress_state"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="量房"
        android:textColor="@color/black"
        android:textSize="14dp" />

</androidx.constraintlayout.widget.ConstraintLayout>